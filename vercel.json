{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",

  "rewrites": [
    {
      "source": "/docs/(.*)",
      "destination": "/docs/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ]
}